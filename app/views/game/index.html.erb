<div id='game-page'>

  <div id='game-control'>

    <div id='existing-games'>
      Choose your game: <%= collection_select(:get, :game_id, @games, :name, :name, {:prompt => true}) %>
    </div>

    <div id='new-game'>
      Or <br>
    <%= form_tag("/game/new_game", :method => "get") do %>
      <%= label_tag(:name, "Start a new game:") %>
      <%= text_field_tag(:name) %>
      <%= submit_tag("Create a new game") %>
    <% end %>
   </div>

  </div>

  <div id='about'>
    <u>My Motivation:</u><br><br>

